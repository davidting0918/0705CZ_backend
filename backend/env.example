# ==============================================
# Environment Configuration
# Copy this file to .env and fill in your values
# ==============================================

# App Environment: test, staging, prod
APP_ENV=staging

# ==============================================
# Database Configuration (PostgreSQL)
# ==============================================

# Production database
POSTGRES_PROD=postgresql://user:password@host:5432/database_prod

# Staging database
POSTGRES_STAGING=postgresql://user:password@host:5432/database_staging

# Test database
POSTGRES_TEST=postgresql://user:password@localhost:5432/database_test

# ==============================================
# Security Keys
# ==============================================

# JWT Secret Key (for access_token - staff dashboard)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Session Secret Key (for session cookies - user website)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET_KEY=your-session-secret-key-change-in-production

# ==============================================
# Google OAuth Configuration
# ==============================================

# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ==============================================
# LINE Login Configuration
# ==============================================

# Get from: https://developers.line.biz/console/
LINE_CLIENT_ID=your-line-channel-id
LINE_CLIENT_SECRET=your-line-channel-secret
LINE_REDIRECT_URI=http://localhost:8000/auth/line/callback

# ==============================================
# Storage Configuration
# ==============================================

# Base path for file storage (leave empty for local development)
# For production (e.g., Render): /var/data/storage
STORAGE_BASE_PATH=

# Base URL for static files (leave empty for relative paths)
# For production: https://yourdomain.com
STAGING_BASE_URL=

